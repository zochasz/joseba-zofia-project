<% if (isAuthenticated) {%>
<form id="calendar-button" action="/event/<%=event.id%>/calendar" method="POST">
  <button type="submit" class="btn btn-default btn-block"> Add to calendar </button>
</form>
<% } %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">

        <div class="form-group">
          <label for="name">Title: </label>
          <span name="name"> <%= event.title %></span>
        </div>

        <div class="form-group">
          <label for="username">Description: </label>
          <span name="username"> <%= event.description %></span>
        </div>

          <div class="form-group">
            <label for="street">Street: </label>
            <span name="street"> <%= event.address.street %></span>
          </div>

          <div class="form-group">
            <label for="streetNo">Street Number: </label>
            <span name="streetNo"> <%= event.address.streetNo %></span>
          </div>

          <div class="form-group">
            <label for="zipCode">Zip Code: </label>
            <span name="zipCode"> <%= event.address.zipCode %></span>
          </div>

          <div class="form-group">
            <label for="city">City: </label>
            <span name="city"> <%= event.address.city %></span>
          </div>

          <div class="form-group">
            <label for="country">Country: </label>
            <span name="country"> <%= event.address.country %></span>
          </div>

          <div class="form-group">
            <label>Product Types: </label>
            <span name="productTypes"> <%= event.products %></span>
          </div>
    </div>
  </div>
</div>
<div id="form-maps">
    <div id="map" ></div>
</div>
<script type="text/javascript"> var myEvent = <%- JSON.stringify(event) %></script>
<script src="/javascripts/show.js" type="text/javascript"></script>
