<div class="container">
  <div class="row">
    <div class="signup">
      <h3> SIGN UP </h3>
      <br>

      <form action="/signup" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control productTypes">
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control productTypes">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" name="email" class="form-control productTypes">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control productTypes">
        </div>
        <div class="form-group" >
          <label>Are You a Producer?</label>
          <div class="checkbox">
            <input type="checkbox" data-toggle="toggle" name="isProducer" id="toggle-producer" data-on="Yes" data-off="No">
          </div>
        </div>
        <div id="form-producer" style="display:none">
          <div class="form-group">
            <label for="street">Street</label>
            <input type="text" name="street" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label for="streetNo">Street Number</label>
            <input type="text" name="streetNo" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label for="zipCode">Zip Code</label>
            <input type="text" name="zipCode" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" name="city" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label for="country">Country</label>
            <input type="text" name="country" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input type="textarea" name="description" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label for="url">Web Address</label>
            <input type="text" name="url" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label for="phoneNo">Phone Number</label>
            <input type="text" name="phoneNo" class="form-control productTypes">
          </div>
          <div class="form-group">
            <label>Product Types</label>
              <% productTypes.forEach((type) => { %>
                <div class="checkbox">
                  <label><input type="checkbox" name="<%= type._id %>" id="<%= type._id %>"><%= type.name %></label>
                </div>
              <% }) %>
          </div>
        </div>
        <div class="search_button marginBottom15px">
          <button type="submit" class="search">SIGN UP</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% if (typeof errorMessage !== "undefined") { %>
  <div class="error-message"><%= errorMessage %></div>
<% } %>
