<div class="container">
  <div class="row">
    <div class="signup">
      <form action="/profile" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control productTypes" value="<%= user.name %>">
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control productTypes" value="<%= user.username %>">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" name="email" class="form-control productTypes" value="<%= user.email %>">
        </div>
        <div class="form-group" >
          <label>Are You a Producer?</label>
          <div class="checkbox">
            <input type="checkbox" data-toggle="toggle" name="isProducer" id="toggle-producer" data-on="Yes" data-off="No">
            <% if (user.isProducer === true) { %>
              <script>
                $(function() {
                  $('#toggle-producer').bootstrapToggle('on');
                })
              </script>
            <% } %>
          </div>
        </div>
        <div id="form-producer" style="display:none">
          <div class="form-group">
            <label for="street">Street</label>
            <input type="text" name="street" class="form-control productTypes" value="<%= user.address.street %>">
          </div>
          <div class="form-group">
            <label for="streetNo">Street Number</label>
            <input type="text" name="streetNo" class="form-control productTypes" value="<%= user.address.streetNo %>">
          </div>
          <div class="form-group">
            <label for="zipCode">Zip Code</label>
            <input type="text" name="zipCode" class="form-control productTypes" value="<%= user.address.zipCode %>">
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" name="city" class="form-control productTypes" value="<%= user.address.city %>">
          </div>
          <div class="form-group">
            <label for="country">Country</label>
            <input type="text" name="country" class="form-control productTypes" value="<%= user.address.country %>">
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input type="textarea" name="description" class="form-control productTypes" value="<%= user.description %>">
          </div>
          <div class="form-group">
            <label for="url">Web Address</label>
            <input type="text" name="url" class="form-control productTypes" value="<%= user.url %>">
          </div>
          <div class="form-group">
            <label for="phoneNo">Phone Number</label>
            <input type="text" name="phoneNo" class="form-control productTypes" value="<%= user.phoneNo %>">
          </div>
          <div class="form-group">
            <label>Product Types</label>
              <% let i = 0; %>
              <% TYPES.forEach((type) => { %>
              <% i++ %>
                <div class="checkbox">
                  <% if (user.products.indexOf(type) !== -1) { %>
                        <label><input type="checkbox" name="productType<%= i %>" id="productType<%= i %>" checked><%= type %></label>
                  <% } else { %>
                       <label><input type="checkbox" name="productType<%= i %>" id="productType<%= i %>"><%= type %></label>
                  <% } %>
                </div>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="search_button marginBottom15px">
          <button type="submit" class="search">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
