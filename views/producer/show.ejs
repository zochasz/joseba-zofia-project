<form id="favorite-button" action="/producer/<%=user.id%>/favourites" method="POST">
  <button type="submit" class="btn btn-default btn-block"> Add to favorites </button>
</form>

<br>
<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">

        <div class="form-group">
          <label for="name">Name: </label>
          <span name="name"> <%= user.name %></span>
        </div>

        <div class="form-group">
          <label for="username">Username: </label>
          <span name="username"> <%= user.username %></span>
        </div>

        <div class="form-group">
          <label for="email">Email: </label>
          <a href="mailto:<%= user.email %>" name="email" ><%= user.email %>"</a>
        </div>

          <div class="form-group">
            <label for="street">Street: </label>
            <span name="street"> <%= user.address.street %></span>
          </div>

          <div class="form-group">
            <label for="streetNo">Street Number: </label>
            <span name="streetNo"> <%= user.address.streetNo %></span>
          </div>

          <div class="form-group">
            <label for="zipCode">Zip Code: </label>
            <span name="zipCode"> <%= user.address.zipCode %></span>
          </div>

          <div class="form-group">
            <label for="city">City: </label>
            <span name="city"> <%= user.address.city %></span>
          </div>

          <div class="form-group">
            <label for="country">Country: </label>
            <span name="country"> <%= user.address.country %></span>
          </div>

          <div class="form-group">
            <label for="description">Description:</label>
            <span name="description"> <%= user.description %></span>
          </div>

          <div class="form-group">
            <label for="url">Web Address: </label>
            <a href ="https://<%= user.url %>" target="_blank" name="url"> <%= user.url %></a>
          </div>

          <div class="form-group">
            <label for="phoneNo">Phone Number:</label>
            <span name="phoneNo"> <%= user.phoneNo %></span>
          </div>

          <div class="form-group">
            <label>Product Types: </label>
            <span name="productTypes"> <%= user.products %></span>
          </div>
    </div>
  </div>
</div>
<div id="form-maps">
    <div id="map" ></div>
</div>
<script type="text/javascript"> var myEvent = <%- JSON.stringify(user) %></script>
<script src="/javascripts/show.js" type="text/javascript"></script>
